<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:textAlignment="center"
            android:textColor="@color/greenColor"
            android:text="Accepted Members"/>
        <GridView
            android:id="@+id/accepted_members"
            android:numColumns="auto_fit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:verticalSpacing="5dp"
            android:horizontalSpacing="5dp"
            android:columnWidth="60dp"
            android:gravity="center"></GridView>

        <TextView
            android:id="@+id/no_accepted_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:text="No Accepted"/>
        <View
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:textAlignment="center"
            android:textColor="@color/redColor"
            android:text="Rejected Members"/>
        <GridView
            android:id="@+id/rejected_members"
            android:numColumns="auto_fit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:verticalSpacing="5dp"
            android:horizontalSpacing="5dp"
            android:columnWidth="60dp"
            android:gravity="center"></GridView>
        <TextView
            android:id="@+id/no_rejected_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:text="No Rejected"/>

        <View
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>
        <TextView
            android:id="@+id/no_satus_members_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:text="Members without status"/>
        <GridView
            android:id="@+id/no_satus_members"
            android:numColumns="auto_fit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:verticalSpacing="5dp"
            android:horizontalSpacing="5dp"
            android:columnWidth="60dp"
            android:gravity="center"></GridView>
    </LinearLayout>

